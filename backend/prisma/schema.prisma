datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Room {
  id   Int    @id @default(autoincrement())
  name String
}

model ConferenceHall {
  id   Int    @id @default(autoincrement())
  name String
}

model OtherService {
  id   Int    @id @default(autoincrement())
  name String
}

model Booking {
  id        Int    @id @default(autoincrement())
  userId    Int
  hallName  String?
  roomName  String?
  date      DateTime
  startHour String
  endHour   String
}
